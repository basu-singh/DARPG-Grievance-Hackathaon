<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Activity.ViewGrievance"
    tools:showIn="@layout/activity_view_grievance">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/date_icon_black"
                android:tint="@color/blue_grey"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/blue_grey"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:id="@+id/timestamp"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:text="TImestamp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/institution_icon_black"
                android:tint="@color/blue_grey"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/blue_grey"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:id="@+id/ministry"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:text="Ministry"/>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="6dp"
            app:cardCornerRadius="4dp"
            app:cardBackgroundColor="@color/blue_grey_light"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="This is a test Message"
                android:id="@+id/message"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="6dp"
            android:layout_marginTop="15dp"
            android:visibility="gone"
            android:id="@+id/image1Layout"
            app:cardElevation="4dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxHeight="250dp"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:id="@+id/image1"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="6dp"
            android:layout_marginTop="15dp"
            android:visibility="gone"
            android:id="@+id/image2Layout"
            app:cardElevation="4dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxHeight="250dp"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:id="@+id/image2"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="6dp"
            android:layout_marginTop="15dp"
            android:visibility="gone"
            android:id="@+id/image3Layout"
            app:cardElevation="4dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxHeight="250dp"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:id="@+id/image3"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="@color/dark_red"
            android:text="Reply"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/blue_grey"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="No response from admin yet"
            android:layout_marginBottom="30dp"/>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>