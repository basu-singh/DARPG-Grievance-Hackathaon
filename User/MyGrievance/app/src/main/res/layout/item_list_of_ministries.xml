<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:background="?android:attr/selectableItemBackground"
    android:padding="15dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <ImageView android:layout_width="42dp"
            android:layout_height="42dp"
            android:id="@+id/text_drawable"
            android:layout_gravity="center_vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:text="@string/app_name"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/ministry_name"/>

    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/blue_grey"
        android:layout_marginTop="18dp"
        app:cardElevation="6dp"
        app:cardCornerRadius="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="@color/grey_e2e2"
                android:text="Nodal officer"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="19sp"
                android:textColor="@color/white"
                android:text="@string/app_name"
                android:layout_marginTop="5dp"
                android:id="@+id/officer_name"
                android:maxLines="2"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="15sp"
                android:layout_marginTop="4dp"
                android:textColor="@color/yellow_light"
                android:text="@string/app_name"
                android:id="@+id/officer_designation"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:tint="@color/blue_grey"
            android:layout_gravity="center_vertical"
            android:src="@drawable/email_icon_black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="16sp"
            android:textColor="@color/awesome_black"
            android:text="@string/app_name"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/email"
            android:maxLines="2"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:tint="@color/blue_grey"
            android:layout_gravity="center_vertical"
            android:src="@drawable/phone_icon_black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="16sp"
            android:textColor="@color/awesome_black"
            android:text="@string/app_name"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/phone"
            android:maxLines="2"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/address_layout"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:tint="@color/blue_grey"
            android:layout_gravity="center_vertical"
            android:src="@drawable/location_icon_black_arrow"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="16sp"
            android:textColor="@color/awesome_black"
            android:text="@string/app_name"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/address"
            android:maxLines="2"/>

    </LinearLayout>


</LinearLayout>